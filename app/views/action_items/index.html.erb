<p id="notice"><%= notice %></p>

<h2>Active Action Items</h2>

<table>
  <thead>
    <tr>
      <th>Assignee</th>
      <th>Project</th>
      <th>Description</th>
      <th>Duedate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_items.each do |action_item| %>
      <tr>
        <td><%= action_item.assignee %></td>
        <td><%= action_item.project %></td>
        <td><%= action_item.description %></td>
        <td><%= action_item.dueDate %></td>
        <td><%= link_to 'Show', action_item %></td>
        <td><%= link_to 'Edit', edit_action_item_path(action_item) %></td>
        <td><%= link_to 'Destroy', action_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

